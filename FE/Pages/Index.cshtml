@page
@using FE.Const
@model IndexModel
@{
    ViewData["Title"] = "Order";
}

<h2>Create New Order</h2>

<form method="post">
    <div>
        <label>Amount</label>
        <input asp-for="NewOrder.Amount" class="form-control" />
    </div>
    <div>
        <label>Description</label>
        <input asp-for="NewOrder.OrderDesc" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<hr />

@await Html.PartialAsync(PartialName.OrderListPartial, Model.Orders)
