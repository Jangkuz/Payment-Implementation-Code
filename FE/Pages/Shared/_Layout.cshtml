<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FE.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="container-fluid flex-grow-1">
        <div class="row min-vh-100">
            <div class="col-md-3 col-lg-2 d-md-block bg-primary bg-opacity-150">
                <div class="pt-3 pb-2 mb-3 mt-3 border-bottom border-light">
                    <h1 class="h2 text-white">@ViewData["Title"]</h1>
                </div>
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center gap-2 hover-highlight rounded-3 mx-2"
                                asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center gap-2 hover-highlight rounded-3 mx-2"
                                asp-area="" asp-page="/Payment/VNPay">
                                <i class="bi bi-credit-card"></i>
                                VNPay
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center gap-2 hover-highlight rounded-3 mx-2"
                                asp-area="" asp-page="/Payment/PayOS">
                                <i class="bi bi-credit-card"></i>
                                PayOS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center gap-2 hover-highlight rounded-3 mx-2"
                                asp-area="" asp-page="/Payment/PayPal">
                                <i class="bi bi-credit-card"></i>
                                PayPal
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <main class="col-md-9 col-lg-10 d-flex flex-column">
                <div class="px-md-4 flex-grow-1">
                    @RenderBody()
                </div>

                <footer class="border-top footer text-muted mt-auto">
                    <div class="container">
                        &copy; 2025 - FE - <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                </footer>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>