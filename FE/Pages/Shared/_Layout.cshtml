<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FE</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/FE.styles.css" asp-append-version="true" /> *@
</head>

<body>
    <div class="grid grid-cols-[20%_80%] h-full">
        <aside class="bg-gray-800 text-white p-4">
            <div class="space-y-4">
                <div class="text-xl font-bold p-2 border-b border-gray-700">
                    Payment Demo
                </div>
                <nav class="space-y-1">
                    <a asp-page="/Index" class="flex items-center p-2 rounded hover:bg-gray-700 transition">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        Home
                    </a>
                    <a asp-page="/VNPay/Checkout" class="flex items-center p-2 rounded hover:bg-gray-700 transition">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                        </svg>
                        VNPay Demo
                    </a>
                </nav>
            </div>
        </aside>
        @* <main class="flex flex-col"> *@
            @* <div class="container mx-auto px-4 py-8 flex-1"> *@
            <div>
                @RenderBody()
            </div>
            @* <footer class="border-t py-4">
                <div class="container mx-auto px-4">
                    &copy; 2025 - FE - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>
        </main> *@
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>